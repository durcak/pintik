<li class="list-group-item">
	<% if activity.trackable %>
	  <div class="activity-like">
	    <div class="info">
	      <h4 class="name"><%= link_to activity.owner.email, users_pins_path(activity.owner) %></h4>
	      <h3 class="action">liked <%= link_to activity.trackable.title, activity.trackable %></h3>
	    </div>
	    <%= render 'shared/created_at', activity: activity %>
	  </div>
	<% end %>
</li>